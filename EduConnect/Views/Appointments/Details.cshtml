@model EduConnect.Models.Appointment
@using EduConnect.Services
@using Microsoft.AspNetCore.Identity
@using System.Web
@inject UserManager<IdentityUser> _userManager
@{
    ViewData["Title"] = "Details";

}

<link rel="stylesheet" href="~/css/StudentHome.css" />



<div style="background-color:white; padding:10px; border-radius:15px; height:300px;">
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Accepted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Accepted.Value)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)  @Html.DisplayFor(model => model.Student.LastName)
        </dd>
    </dl>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>



