@page
@model RegisterModel
@{
    ViewData["Title"] = "EduConnect";
}


<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>Sign Up</title>
    <link rel="stylesheet" href="~/css/RegisterStyle.css" />
</head>
<body>
    <div class="center">
        <h1>Register</h1>

        <form method="post">
            <div class="main_input">
                <div class="left">

                    <div class="txt_field">
                        <input type="text" asp-for="Input.Name" required>
                        <span></span>
                        <label asp-for="Input.Name"></label>
                    </div>

                    <div class="txt_field">
                        <input type="email" asp-for="Input.Email" required>
                        <span></span>
                        <label asp-for="Input.Email"></label>
                    </div>

                    <div class="txt_field">
                        <input type="text" asp-for="Input.City" required>
                        <span></span>
                        <label>City</label>
                    </div>
                    <div class="txt_field">
                        <input type="text" asp-for="Input.LoginName" required>
                        <span></span>
                        <label>Username</label>
                    </div>
                    <div class="txt_field">
                        <input type="password" asp-for="Input.Password" required>
                        <span></span>
                        <label>Password</label>
                    </div>

                    <div class="txt_field">
                        <input type="password" asp-for="Input.ConfirmPassword" required>
                        <span></span>
                        <label asp-for="Input.ConfirmPassword"></label>
                    </div>


                </div>
                <div class="right">

                    <div class="txt_field">
                        <input type="text" asp-for="Input.Surname" required>
                        <span></span>
                        <label>Surname</label>
                    </div>
                    <div class="txt_field">
                        <input type="tel" asp-for="Input.CellPhoneNumber" required>
                        <span></span>
                        <label>Phone Number</label>
                    </div>

                    <label for="upload" id="pic">
                        Upload your profile photo :
                        <img id="upload-icon" src="https://www.kindpng.com/picc/m/451-4517876_default-profile-hd-png-download.png" alt="Upload Icon">
                    </label>
                    <input type="file" name="picture" id="upload" accept="image/png, image/jpeg">
                </div>
            </div>
        </form>

        <div class="signup_link">
            Already a member? <a href="#">Login</a>
        </div>
        <input type="submit" value="Register">

    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}